{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "Node",
    "declaration": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "./dist",
    "typeRoots": ["node_modules/@types"],
    "noImplicitAny": true,
    "removeComments": true
  },
  "exclude": ["dist", "node_modules", "vite-plugins"]
}
