{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2015",
    "module": "ES2015",
    "lib": ["es2015"],
    "moduleResolution": "Node",
    "declaration": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "./build",
    "typeRoots": ["node_modules/@types", "./src/@types"],
    "noImplicitAny": true,
    "removeComments": true
  },
  "exclude": ["build"]
}
