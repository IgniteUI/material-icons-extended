{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "Node",
    "declaration": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "./build",
    "typeRoots": ["node_modules/@types", "./src/@types"],
    "noImplicitAny": true,
    "removeComments": true
  },
  "exclude": ["dist", "node_modules"]
}
